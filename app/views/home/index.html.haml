- title 'Главная'
- meta_tag :description, 'Расписание следующего тура, итоги прошедшего тура, новости соревнований по футзалу Карагандинской области 2018-2019'
- meta_tag :keywords, 'Футзал, Караганда, Карагандинская область, 2018 год, расписание игр футзал'
.panel.panel-success
  .panel-heading
    Новости
  .panel-body
    -if @items.present?
      %ul.list-group
        -@items.each do |item|
          %li.list-group-item
            
            .row
              .col-md-3
              
                .text-center
                  .photo_large
                    = image_tag item.image.url(:small) if item.image.present?
              .col-md-9


                %h3.text-center=link_to item.title, items_path(item), target: :blank

                %p=item.body

                %p.pull-right
                  %i.fa.fa-calendar
                  =l item.created_at+6.hours, format: :short
                  =link_to 'Читать', items_path, class: 'btn btn-info btn-sm'
    -else
      .text-center Пока не создано ни одной новости


.panel.panel-success
  .panel-heading
    Расписание и результаты текущего тура
  .panel-body
    -if @results_current.present?
      %h3.text-center=@tour_current.name
      %ul.list-group
        %table.table.table-hover.table-condensed
          %tr.active
            %td Дата и время
            %td Хозяин
            %td Гость
            %td Счет
          -@results_current.each do |result|
            %tr
              %td=l result.timestamp, format: :short
              %td=result.home_team.name
              %td=result.guest_team.name if result.guest_team.present?
              %td=result.result
    -else
      .text-center Результатов нет

.panel.panel-success
  .panel-heading
    Расписание следующего тура
  .panel-body
    -if @schedules_future.present?
      %h3.text-center=@tour_future.name
      %ul.list-group
        %table.table.table-hover
          %tr.active
            %td Дата и время
            %td Хозяин
            %td Гость
          -@schedules_future.each do |schedule|
            %tr
              %td
                -if schedule.timestamp.present?
                  =l schedule.timestamp, format: :short
                -else
                  Время не указано
              %td=schedule.home_team.name
              %td=schedule.guest_team.name
    -else
      .text-center Расписание на следующий тур пока не создано