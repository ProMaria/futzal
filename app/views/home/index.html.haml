- if @schedules.present?
  .panel.panel-success
    .panel-heading
      Текущие игры
    .panel-body
      %ul.list-group
        %table.table.table-hover.table-condensed.table-striped.table-sm

          -@schedules.each do |result|
            =render 'list', result: result

-if @result_final.present? || @result_sfinal.present?|| @result_qfinal.present?
  .panel.panel-success
    .panel-heading
      Финальные игры.
      
    .panel-body
      -if @result_qfinal.present?  
        %h3.text-center 1/4 финала
        %ul.list-group
          %table.table.table-hover.table-condensed
            %tr.active
              %td Дата и время
              %td Команда
              %td Команда
              %td Счет
            -@result_qfinal.each do |result|
              =render 'list', result: result
      -if @result_sfinal.present?  
        %h3.text-center 1/2 финала
        %ul.list-group
          %table.table.table-hover.table-condensed
            %tr.active
              %td Дата и время
              %td Команда
              %td Команда
              %td Счет
            -@result_sfinal.each do |result|
              =render 'list', result: result
      -if @result_third.present?  
        %h3.text-center Матч за 3 место
        %ul.list-group
          %table.table.table-hover.table-condensed
            %tr.active
              %td Дата и время
              %td Команда
              %td Команда
              %td Счет
            -@result_third.each do |result|
              =render 'list', result: result
      -if @result_final.present?  
        %h3.text-center Финал
        %ul.list-group
          %table.table.table-hover.table-condensed
            %tr.active
              %td Дата и время
              %td Команда
              %td Команда
              %td Счет
            -@result_final.each do |result|
              =render 'list', result: result
