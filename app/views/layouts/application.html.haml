    $(window).scroll(function () {
        if ($(this).scrollTop() > 120) {

            $('#scroller').fadeIn();
            $('.my_menu').addClass('positionTop');
        } else {
            $('#scroller').fadeOut();
            $('.my_menu').removeClass('positionTop');
            }
    });


    $('#scroller').click(function () {
        $('body,html').animate({
            scrollTop: 0
        }, 400);
        return false;
